<Page x:ConnectionId='1'
    x:Name="pageRoot"
    x:Class="AriaView.Model.MapPage"
    DataContext="{Binding  ViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AriaView.Model"
    xmlns:common="using:AriaView.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                         >

    <Page.Resources>
        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">AriaView</x:String>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="55"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Margin="39,59,39,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Top"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button"/>
            <TextBlock x:Name="pageTitle" x:Uid="appName" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
                        IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="0,0,30,40"/>
        </Grid>
        <Grid Grid.Row="1" Height="auto" Width="auto">
            <Button x:ConnectionId='2' x:Name="previousTermBtn" x:Uid="precedent" HorizontalAlignment="Left"                                Width="auto" Height="auto"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="auto">
                <ComboBox x:ConnectionId='4'  x:Name="dateTermsCB" ItemsSource="{Binding dateTerms}"  Height="auto" Width="auto"
                                                                         >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding StartDate}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                    <ComboBox.Header>
                        <TextBlock x:Uid="term" Text="Term" HorizontalAlignment="Center" />
                    </ComboBox.Header>
                </ComboBox>
                <ComboBox x:ConnectionId='5' x:Name="datesCB"   Width="auto" ItemsSource="{Binding datesList}"                                             Margin="20,0,0,0">
                    <ComboBox.Header>
                        <TextBlock x:Uid="date" Text="Date" HorizontalAlignment="Center"/>
                    </ComboBox.Header>
                </ComboBox>
                <ComboBox x:ConnectionId='6' x:Name="sitesCB" Width="auto" ItemsSource="{Binding user.Sites}"                                              Margin="20,0,0,0">
                    <ComboBox.Header>
                        <TextBlock x:Uid="site" Text="Site" HorizontalAlignment="Center"/>
                    </ComboBox.Header>
                </ComboBox>
                <!--<ComboBox x:Name="pollutantsCB" Width="auto" ItemsSource="{Binding PollutantsList}" SelectionChanged="pollutantsCB_SelectionChanged"  Margin="20,0,0,0">
                    <ComboBox.Header>
                        <TextBlock x:Uid="pollutant" Text="Pollutant" HorizontalAlignment="Center"/>
                    </ComboBox.Header>
                </ComboBox>-->
            </StackPanel>
            <Button x:ConnectionId='3' x:Name="nextTermBtn" x:Uid="suivant" HorizontalAlignment="Right"                            Width="auto" Height="auto"/>
        </Grid>
        <local:MapView x:Name="mapView" Height="Auto" Width="Auto"  Grid.Row ="2"/>
    </Grid>
</Page>

